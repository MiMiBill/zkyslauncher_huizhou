<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="632px"
    android:background="@drawable/shape_solid_fff_corners_8"
    android:layout_height="488px">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView13"
            style="@style/txt_333_16"
            android:textSize="34px"
            android:textColor="@color/theme_color"
            android:layout_marginTop="28px"
            android:text="患者验证登陆"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="27px"
            android:background="@color/line_de"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <EditText
            android:id="@+id/etNumber"
            android:textSize="32px"
            style="@style/et_333_a8_32"
            android:layout_width="0dp"
            android:layout_height="72px"
            android:paddingRight="32px"
            android:paddingLeft="33px"
            android:layout_marginTop="94px"
            android:ems="10"
            android:inputType="number"
            android:hint="请输入住院号"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view9" />

        <View
            android:id="@+id/view10"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginLeft="33px"
            android:layout_marginRight="32px"
            android:background="#a8a8a8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNumber" />

        <Button
            android:id="@+id/btnConfirm"
            style="@style/btn"
            android:layout_marginBottom="24px"
            android:layout_marginEnd="33px"
            android:layout_marginStart="33px"
            android:text="确认"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/px80"
            android:layout_height="@dimen/px60"
            android:layout_marginEnd="18px"
            android:padding="14px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/icon_close" />

        <TextView
            android:id="@+id/tvHint"
            android:visibility="invisible"
            style="@style/txt_333_16"
            android:textSize="24px"
            android:textColor="#E16573"
            android:layout_marginTop="24px"
            android:text="*住院号有误，请重新输入"
            app:layout_constraintStart_toStartOf="@+id/view10"
            app:layout_constraintTop_toBottomOf="@+id/view10" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>