<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_1A153E"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/lly_title"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="75px">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/px20"
            android:paddingRight="@dimen/px20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/px34"
                android:layout_height="@dimen/px34"
                android:src="@mipmap/ic_back_white" />

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="@dimen/px60"
                android:gravity="center"
                android:layout_height="@dimen/px40"
                android:layout_marginLeft="@dimen/px10"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/px25" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_hoipital"
            android:text="东莞人民医院"
            android:textColor="@color/white"
            android:textSize="30px"
            android:layout_marginLeft="@dimen/px30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/px30"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_date"
                android:text="12:10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25px" />

            <TextView
                android:id="@+id/tv_net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px14"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:text="中科云上"
                android:textColor="@color/white"
                android:textSize="25px" />

            <TextView
                android:id="@+id/tv_net_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:textColor="@color/white"
                android:textSize="25px" />

            <ImageView
                android:id="@+id/iv_net"
                android:layout_width="@dimen/px26"
                android:layout_height="@dimen/px20"
                android:layout_marginLeft="@dimen/px10"
                />

            <ImageView
                android:id="@+id/iv_wifi"
                android:layout_width="@dimen/px26"
                android:layout_height="@dimen/px20"
                android:layout_marginLeft="@dimen/px10"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/lly_title"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:layout_marginBottom="@dimen/px30"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="920px"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="920px"
                android:layout_height="245px">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@color/color_41BAEF"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_bed_num"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="12"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="120px"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_toRightOf="@id/tv_bed_num"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="床"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/px72"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="50px"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_marginLeft="@dimen/px20"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="80px"
                    android:background="@color/color_006DA8"
                    android:layout_height="match_parent" />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/px20"
                    android:background="@color/color_006DA8"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="70px"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_below="@id/tv_sex"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="70px"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/px20"
                android:paddingLeft="@dimen/px61"
                android:background="@color/color_006DA8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px350">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="0dp">
                    <ImageView
                        android:src="@mipmap/card_card"
                        android:layout_width="@dimen/px30"
                        android:layout_height="@dimen/px34" />
                    <TextView
                        android:text="科室"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/px3"
                        android:textSize="@dimen/px35"
                        android:textColor="@color/color_A1D8F6"
                        android:layout_width="@dimen/px143"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tv_card_num"
                        android:text=""
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px36"
                        android:textSize="@dimen/px35"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/px28"
                    android:background="@color/white"
                    android:layout_height="@dimen/px1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="0dp">
                    <ImageView
                        android:src="@mipmap/card_time"
                        android:layout_width="@dimen/px30"
                        android:layout_height="@dimen/px34" />
                    <TextView
                        android:text="@string/card_time"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/px3"
                        android:textSize="@dimen/px35"
                        android:textColor="@color/color_A1D8F6"
                        android:layout_width="@dimen/px143"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tv_card_time"
                        android:text=""
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px36"
                        android:textSize="@dimen/px35"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/px28"
                    android:background="@color/white"
                    android:layout_height="@dimen/px1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="0dp">
                    <ImageView
                        android:src="@mipmap/card_info"
                        android:layout_width="@dimen/px30"
                        android:layout_height="@dimen/px34" />
                    <TextView
                        android:text="@string/card_info"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/px3"
                        android:textSize="@dimen/px35"
                        android:textColor="@color/color_A1D8F6"
                        android:layout_width="@dimen/px143"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tv_card_info"
                        android:text=""
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px36"
                        android:textSize="@dimen/px35"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/px28"
                    android:background="@color/white"
                    android:layout_height="@dimen/px1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="0dp">
                    <ImageView
                        android:src="@mipmap/card_doctor"
                        android:layout_width="@dimen/px30"
                        android:layout_height="@dimen/px34" />
                    <TextView
                        android:text="@string/card_doctor"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/px3"
                        android:textSize="@dimen/px35"
                        android:textColor="@color/color_A1D8F6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tv_doctor"
                        android:text=""
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px36"
                        android:textSize="@dimen/px35"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/px28"
                    android:background="@color/white"
                    android:layout_height="@dimen/px1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="0dp">
                    <ImageView
                        android:src="@mipmap/card_nurse"
                        android:layout_width="@dimen/px30"
                        android:layout_height="@dimen/px34" />
                    <TextView
                        android:text="@string/card_nurse"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/px3"
                        android:textSize="@dimen/px35"
                        android:textColor="@color/color_A1D8F6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tv_nurse"
                        android:text=""
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px36"
                        android:textSize="@dimen/px35"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@color/color_FF633A"
                android:layout_marginTop="@dimen/px20"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/px59">
                <ImageView
                    android:src="@mipmap/card_notice"
                    android:layout_marginLeft="@dimen/px21"
                    android:layout_width="@dimen/px34"
                    android:layout_height="@dimen/px34" />
                <TextView
                    android:text="@string/card_notice"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/px30"
                    android:layout_marginLeft="@dimen/px8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/px21"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/color_5DBA21"
                android:gravity="center_vertical"
                android:layout_height="@dimen/px151">
                <ImageView
                    android:src="@mipmap/card_hl"
                    android:layout_marginLeft="@dimen/px27"
                    android:layout_width="@dimen/px48"
                    android:layout_height="@dimen/px47" />
                <TextView
                    android:id="@+id/tv_hl"
                    android:textSize="@dimen/px40"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/color_5DBA21"
                android:layout_marginTop="@dimen/px19"
                android:gravity="center_vertical"
                android:layout_height="@dimen/px151">
                <ImageView
                    android:src="@mipmap/card_food"
                    android:layout_marginLeft="@dimen/px27"
                    android:layout_width="@dimen/px48"
                    android:layout_height="@dimen/px47" />
                <TextView
                    android:id="@+id/tv_food"
                    android:textSize="@dimen/px40"
                    android:gravity="center"
                    android:text="半流食"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/color_5DBA21"
                android:layout_marginTop="@dimen/px19"
                android:gravity="center_vertical"
                android:layout_height="@dimen/px151">
                <ImageView
                    android:src="@mipmap/card_gm"
                    android:layout_marginLeft="@dimen/px27"
                    android:layout_width="@dimen/px48"
                    android:layout_height="@dimen/px47" />
                <TextView
                    android:textSize="@dimen/px40"
                    android:gravity="center"
                    android:text="无过敏"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/color_006DA8"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/px19"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/iv_nurse"
                    android:src="@mipmap/card_zb_nurse"
                    android:layout_marginLeft="@dimen/px26"
                    android:layout_marginTop="@dimen/px34"
                    android:layout_width="@dimen/px50"
                    android:layout_height="@dimen/px61" />
                <TextView
                    android:id="@+id/tv_zb_nurse"
                    android:textSize="@dimen/px35"
                    android:text="值班护士"
                    android:layout_toRightOf="@id/iv_nurse"
                    android:layout_marginLeft="@dimen/px6"
                    android:layout_marginTop="@dimen/px44"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_zb_nu"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/px40"
                    android:layout_marginTop="@dimen/px22"
                    android:layout_marginLeft="@dimen/px82"
                    android:layout_below="@id/tv_zb_nurse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>