<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="@dimen/px400"
    android:layout_height="@dimen/px400"
    android:background="@drawable/shape_solid_fff_corners_8"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_dissmiss"
        android:layout_width="@dimen/px32"
        android:layout_height="@dimen/px32"
        android:src="@mipmap/dw_close"
        android:layout_marginTop="@dimen/px10"
        android:layout_marginRight="@dimen/px10"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="@dimen/px182"
        android:layout_height="@dimen/px161"
        android:src="@mipmap/ic_video_play_error"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px50"/>


    <Button
        android:id="@+id/btn_dissmiss"
        android:layout_width="@dimen/px350"
        android:layout_height="@dimen/px50"
        android:background="@drawable/shape_button_bg_blue"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px30"
        android:text="确    定"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放错误，请稍后重试"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black_gray"
        android:layout_marginTop="@dimen/px250"/>
    
</RelativeLayout>