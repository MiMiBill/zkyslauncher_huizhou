<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="632px"
    android:layout_height="488px"
    android:background="@drawable/shape_solid_fff_corners_8">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView13"
            style="@style/txt_333_16"
            android:layout_marginTop="28px"
            android:text="修改配置信息"
            android:textColor="@color/theme_color"
            android:textSize="34px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="27px"
            android:background="@color/line_de"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <LinearLayout
            android:id="@+id/etNumber"
            style="@style/et_333_a8_32"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:ems="10"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_333_16"
                    android:text="请输入域名" />

                <EditText
                    android:id="@+id/etHost"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="30px"
                    android:text="http:"
                    android:layout_weight="1"
                    android:background="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10px"
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_333_16"
                    android:text="打印日志" />

                <CheckBox
                    android:id="@+id/cbxShowLog"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="30px"
                    android:text="是否打印日志"
                    android:layout_weight="1"
                    android:background="@null" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view10"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginLeft="33px"
            android:layout_marginRight="32px"
            android:background="#a8a8a8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNumber" />

        <Button
            android:id="@+id/btnConfirm"
            style="@style/btn"
            android:layout_marginStart="33px"
            android:layout_marginEnd="33px"
            android:layout_marginBottom="24px"
            android:text="确认"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18px"
            android:padding="14px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/icon_close" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>