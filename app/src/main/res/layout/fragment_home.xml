                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/px110"
                                android:background="@mipmap/ic_home_userinfo_bg"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/px20">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="亲爱的患者:"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/px10"
                                    android:text="当前您未办理入院信息"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivPersonQrCode"
                                android:layout_width="@dimen/px180"
                                android:layout_height="@dimen/px180"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/px30" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/px10"
                                android:gravity="center"
                                android:text="请联系护士办理入院信息登记"
                                android:textColor="@color/color_585858"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px190"
                    android:layout_marginTop="@dimen/px15"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_hostipal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px61"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/px100"
                            android:layout_height="@dimen/px100"
                            android:src="@mipmap/ic_home_item_hositpal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px14"
                            android:text="医院介绍"
                            android:textColor="@color/black_gray"
                            android:textSize="@dimen/px25" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_hostipal_ency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px102"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/px100"
                            android:layout_height="@dimen/px100"
                            android:src="@mipmap/ic_home_item_his_ency" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px14"
                            android:text="医疗百科"
                            android:textColor="@color/black_gray"
                            android:textSize="@dimen/px25" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_his_mission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px102"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/px100"
                            android:layout_height="@dimen/px100"
                            android:src="@mipmap/ic_home_item_his_mission" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/px14"
                            android:text="医疗宣教"
                            android:textColor="@color/black_gray"
                            android:textSize="@dimen/px25" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_hos_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px102"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/px100"
                            android:layout_height="@dimen/px100"
                            android:src="@mipmap/icon_home_hos_service" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/px14"
                            android:text="医疗服务"
                            android:textColor="@color/black_gray"
                            android:textSize="@dimen/px25" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px102"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/px100"
                            android:layout_height="@dimen/px100"
                            android:src="@mipmap/ic_home_item_video" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/px14"
                            android:text="视频"
                            android:textColor="@color/black_gray"
                            android:textSize="@dimen/px25" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_video_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px102"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/px100"
                            android:layout_height="@dimen/px100"
                            android:src="@mipmap/ic_home_item_video_line" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/px14"
                            android:text="直播TV"
                            android:textColor="@color/black_gray"
                            android:textSize="@dimen/px25" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px190"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px61"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/px100"
                            android:layout_height="@dimen/px100"
                            android:src="@mipmap/ic_home_item_msg" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px14"
                            android:text="通知"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black_gray"
                            android:textSize="@dimen/px25" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px102"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/px100"
                            android:layout_height="@dimen/px100"
                            android:src="@mipmap/ic_home_item_setting" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px14"
                            android:text="设置"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black_gray"
                            android:textSize="@dimen/px25" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px102"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/px100"
                            android:layout_height="@dimen/px100"
                            android:src="@mipmap/ic_home_item_signin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/px14"
                            android:text="签到中心"
                            android:textColor="@color/black_gray"
                            android:textSize="@dimen/px25" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px102"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/px100"
                            android:layout_height="@dimen/px100"
                            android:src="@mipmap/ic_home_item_drawluck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/px14"
                            android:text="活动抽奖"
                            android:textColor="@color/black_gray"
                            android:textSize="@dimen/px25" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px102"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/px100"
                            android:layout_height="@dimen/px100"
                            android:src="@mipmap/ic_home_item_lock" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/px14"
                            android:text="屏安柜"
                            android:textColor="@color/black_gray"
                            android:textSize="@dimen/px25" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/px20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px25"
                    android:text="播放记录"
                    android:textColor="@color/black_gray"
                    android:layout_marginTop="@dimen/px40"
                    android:layout_marginLeft="@dimen/px19"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px250">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_his_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px22"
                        android:layout_marginLeft="@dimen/px20"
                        android:layout_marginRight="@dimen/px20">
                    </android.support.v7.widget.RecyclerView>

                    <LinearLayout
                        android:id="@+id/ll_his_video_null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="@dimen/px128"
                            android:layout_height="@dimen/px103"
                            android:src="@mipmap/ic_home_his_normal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="暂时没有播放记录"
                            android:textColor="@color/black1"
                            android:textSize="@dimen/px18"
                            android:layout_marginLeft="@dimen/px40"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px25"
                android:text="影视频道"
                android:textColor="@color/black_gray"
                android:layout_marginTop="@dimen/px40"
                android:layout_marginLeft="@dimen/px19"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px320">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_img"
                            android:layout_width="@dimen/px500"
                            android:layout_height="@dimen/px320"
                            android:src="@mipmap/ic_video_load_default"
                            android:scaleType="fitXY"
                            android:layout_marginRight="@dimen/px10"
                            android:layout_marginTop="@dimen/px20"
                            android:layout_marginLeft="@dimen/px20"/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_video_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/ll_top_video_null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="@dimen/px128"
                        android:layout_height="@dimen/px103"
                        android:src="@mipmap/ic_home_his_normal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂时没有视频推荐哟"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/px18"
                        android:layout_marginLeft="@dimen/px40"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </RelativeLayout>

