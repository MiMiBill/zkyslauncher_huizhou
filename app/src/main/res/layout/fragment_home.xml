<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px39"
            android:visibility="gone"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px19"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/px14" />

                <TextView
                    android:id="@+id/tv_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/px14" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/px14"
                    android:layout_marginLeft="@dimen/px10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/px30"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_net"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px14"
                    android:textColor="@color/black_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:text="中科云上"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/px14" />

                <TextView
                    android:id="@+id/tv_net_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/px14" />

                <ImageView
                    android:id="@+id/iv_net"
                    android:layout_width="@dimen/px26"
                    android:layout_height="@dimen/px20"
                    android:layout_marginLeft="@dimen/px10"
                    />

                <ImageView
                    android:id="@+id/iv_wifi"
                    android:layout_width="@dimen/px26"
                    android:layout_height="@dimen/px20"
                    android:layout_marginLeft="@dimen/px10"
                    />

            </LinearLayout>

        </RelativeLayout>

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_hoipital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px23"
                    android:layout_marginTop="@dimen/px20"
                    android:text="上海第九人民医院"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/ll_tab_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_hoipital_name"
                    android:layout_marginLeft="@dimen/px80"
                    android:layout_marginTop="@dimen/px10">

                    <Button
                        android:id="@+id/btn_movie_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent_bg"
                        android:padding="20px"
                        android:text="影视娱乐"
                        android:textColor="#ffffff"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btn_hospital_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent_bg"
                        android:padding="20px"
                        android:text="医院康复"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        android:textStyle="normal" />



                    <Button
                        android:id="@+id/btn_shopping_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent_bg"
                        android:padding="20px"
                        android:text="点餐购物"
                        android:textColor="#ffffff"
                        android:textSize="30sp" />


                </LinearLayout>



                <HorizontalScrollView
                    android:id="@+id/hs_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y460"
                    android:layout_below="@id/ll_tab_container"
                    android:scrollbars="none"
                    android:layout_marginLeft="@dimen/px60"
                    android:layout_marginTop="@dimen/px20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rl_banner_container"
                            android:layout_width="800px"
                            android:layout_marginRight="@dimen/x54"
                            android:layout_height="match_parent">

                            <com.muju.note.launcher.view.banana.Banner
                                android:id="@+id/banner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <VideoView
                                android:id="@+id/videoview"
                                android:layout_width="@dimen/px380"
                                android:layout_height="@dimen/px290"
                                android:layout_marginLeft="@dimen/px44"
                                android:layout_marginTop="@dimen/px34"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_hospital_mien_container"
                            android:layout_width="@dimen/x350"
                            android:clickable="true"
                            android:layout_marginRight="@dimen/px5"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/iv_hospital_mien_icon"
                                android:background="@mipmap/ic_home_item_hositpal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:id="@+id/tv_hospital_mien_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/px10"
                                android:text="医院风采"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="@dimen/y153"
                                android:textColor="#ffffff"
                                android:layout_gravity="center_horizontal"
                                android:textSize="20sp"/>
                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_movie_menu"
                            android:background="@color/transparent_bg"
                            android:layout_marginRight="@dimen/x54"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                </HorizontalScrollView>


                <Button
                    android:id="@+id/btn_setting"
                    android:layout_below="@id/hs_container"
                    android:layout_width="@dimen/px44"
                    android:layout_height="@dimen/px44"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/px30"
                    android:layout_marginBottom="@dimen/px30"
                    android:background="@mipmap/main_setting_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px16"
                    android:layout_marginTop="@dimen/px20"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px19"
                        android:layout_marginTop="@dimen/px30"
                        android:text="播放记录"
                        android:textColor="@color/black_gray"
                        android:textSize="@dimen/px25"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px250">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_his_video"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px20"
                            android:layout_marginTop="@dimen/px22"
                            android:layout_marginRight="@dimen/px20"/>

                        <LinearLayout
                            android:id="@+id/ll_his_video_null"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/px128"
                                android:layout_height="@dimen/px103"
                                android:src="@mipmap/ic_home_his_normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/px40"
                                android:text="暂时没有播放记录"
                                android:textColor="@color/black1"
                                android:textSize="@dimen/px18" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px16"
                    android:layout_marginTop="@dimen/px20"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/px19"
                    android:paddingTop="@dimen/px30"
                    android:text="影视频道"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/px25"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px340"
                    android:layout_marginLeft="@dimen/px16"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/px20"
                    android:visibility="gone">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_img"
                                android:layout_width="@dimen/px500"
                                android:layout_height="@dimen/px320"
                                android:layout_marginLeft="@dimen/px20"
                                android:layout_marginTop="@dimen/px20"
                                android:layout_marginRight="@dimen/px10"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_video_load_default" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_video_top"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </HorizontalScrollView>


                </RelativeLayout>


            </RelativeLayout>

        </ScrollView>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rel_card"
        android:background="@mipmap/bed_card"
        android:layout_width="105px"
        android:layout_marginLeft="@dimen/px60"
        android:visibility="gone"
        android:layout_height="166px">
        <TextView
            android:id="@+id/tv_card"
            android:textColor="@color/white"
            android:text="信息卡"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="34px"
            android:textSize="@dimen/px20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>