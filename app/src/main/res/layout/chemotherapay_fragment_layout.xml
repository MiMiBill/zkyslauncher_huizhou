<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 检化报告项目栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:orientation="vertical"
            android:background="@android:color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="25px"
                android:text="尿液分析"
                android:textStyle="bold"
                android:textSize="@dimen/cost_txt_size_middle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="250px"
                    android:text="标本: 尿液"
                    android:textSize="@dimen/cost_txt_size_small"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="27px"
                    android:text="标本号: MZ20544"
                    android:textSize="@dimen/cost_txt_size_small"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="18px"
                    android:text="时间: 2018.06.19"
                    android:textSize="@dimen/cost_txt_size_small"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:background="#ebebeb"
            android:orientation="horizontal">
            <TextView
                android:layout_width="257px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:text="项目名称"
                android:textColor="@color/text_view_blod"
                android:textSize="@dimen/cost_txt_size_middle"/>
            <TextView
                android:layout_width="156px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="结果"
                android:textColor="@color/text_view_blod"
                android:textSize="@dimen/cost_txt_size_middle"/>
            <TextView
                android:layout_width="153px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="单位"
                android:textColor="@color/text_view_blod"
                android:textSize="@dimen/cost_txt_size_middle"/>
            <TextView
                android:layout_width="133px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="提示"
                android:textColor="@color/text_view_blod"
                android:textSize="@dimen/cost_txt_size_middle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="参考范围"
                android:textColor="@color/text_view_blod"
                android:textSize="@dimen/cost_txt_size_middle"/>
        </LinearLayout>

        <!-- 详细数据 -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcl_chemotherapy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"/>

        <!-- 检查所见 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginTop="40px"
            android:layout_marginLeft="20px"
            android:text="检查所见:"
            android:textColor="@color/text_view_blod"
            android:textStyle="bold"
            android:textSize="@dimen/cost_txt_size_big"
            android:background="#ebebeb"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginLeft="20px"
            android:text="未见不正常"
            android:textSize="@dimen/cost_txt_size_middle"/>

        <!-- 检查提示 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginTop="40px"
            android:layout_marginLeft="20px"
            android:text="检查提示: "
            android:textColor="@color/text_view_blod"
            android:textStyle="bold"
            android:textSize="@dimen/cost_txt_size_big"
            android:background="#ebebeb"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginLeft="20px"
            android:layout_marginBottom="17px"
            android:text="正常"
            android:textSize="@dimen/cost_txt_size_middle"/>
    </LinearLayout>


</ScrollView>
