<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px90"
    android:paddingRight="@dimen/px30">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/px30">
        <TextView
            android:id="@+id/tv_pos"
            android:layout_width="@dimen/px39"
            android:layout_height="@dimen/px39"
            android:background="@drawable/shape_button_bg_blue4"
            android:text="1"
            android:textSize="@dimen/px25"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_gray1"
            android:text="手术前，手术中和手术后"
            android:textSize="@dimen/px22"
            android:layout_marginLeft="@dimen/px24"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-07-20  09:36:00"
            android:textColor="@color/black_gray"
            android:textSize="@dimen/px18"
            android:layout_marginLeft="@dimen/px20"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/px76"
        android:layout_marginTop="@dimen/px10"
        android:text="内容"
        android:textSize="@dimen/px18"
        android:lineSpacingExtra="@dimen/px8"
        android:layout_marginLeft="@dimen/px63"
        android:textColor="@color/black_gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white_gray1"
        android:layout_marginTop="@dimen/px29"></View>

</LinearLayout>