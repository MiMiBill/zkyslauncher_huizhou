<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px45"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pos"
            android:layout_width="@dimen/px76"
            android:layout_height="match_parent"
            android:textSize="@dimen/px18"
            android:gravity="center"
            android:text="序号"
            android:textColor="@color/black_gray"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#DDDDDD"></View>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/px209"
            android:layout_height="match_parent"
            android:textSize="@dimen/px18"
            android:gravity="center"
            android:text="项目名称"
            android:textColor="@color/black_gray"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#DDDDDD"></View>
        <TextView
            android:id="@+id/tv_size"
            android:layout_width="@dimen/px205"
            android:layout_height="match_parent"
            android:textSize="@dimen/px18"
            android:gravity="center"
            android:text="规格"
            android:textColor="@color/black_gray"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#DDDDDD"></View>
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="@dimen/px92"
            android:layout_height="match_parent"
            android:textSize="@dimen/px18"
            android:gravity="center"
            android:text="数量"
            android:textColor="@color/black_gray"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#DDDDDD"></View>
        <TextView
            android:id="@+id/tv_company"
            android:layout_width="@dimen/px100"
            android:layout_height="match_parent"
            android:textSize="@dimen/px18"
            android:gravity="center"
            android:text="单位"
            android:textColor="@color/black_gray"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#DDDDDD"></View>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="@dimen/px121"
            android:layout_height="match_parent"
            android:textSize="@dimen/px18"
            android:gravity="center"
            android:text="金额"
            android:textColor="@color/black_gray"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#DDDDDD"></View>
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="@dimen/px136"
            android:layout_height="match_parent"
            android:textSize="@dimen/px18"
            android:gravity="center"
            android:text="类别"
            android:textColor="@color/black_gray"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#DDDDDD"></View>
        <TextView
            android:id="@+id/tv_level"
            android:layout_width="@dimen/px99"
            android:layout_height="match_parent"
            android:textSize="@dimen/px18"
            android:gravity="center"
            android:text="等级"
            android:textColor="@color/black_gray"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#DDDDDD"></View>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="@dimen/px153"
            android:layout_height="match_parent"
            android:textSize="@dimen/px18"
            android:gravity="center"
            android:text="日期"
            android:textColor="@color/black_gray"/>

    </LinearLayout>


</LinearLayout>