<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/tv_wechat"
        android:text="请用微信扫码登录"
        android:textColor="@color/color_FF6339"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_ma"
        android:layout_below="@id/tv_wechat"
        android:src="@mipmap/setting_ma"
        android:layout_width="@dimen/px234"
        android:layout_height="@dimen/px234" />
    <ImageView
        android:src="@mipmap/setting_default"
        android:layout_toRightOf="@id/tv_wechat"
        android:layout_width="@dimen/px256"
        android:layout_marginLeft="@dimen/px4"
        android:layout_height="@dimen/px256" />
</RelativeLayout>