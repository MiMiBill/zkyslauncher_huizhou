<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="504px"
    android:layout_height="504px"
    android:id="@+id/rel_ad"
    android:visibility="gone"
    android:background="#34518B">

    <ImageView
        android:id="@+id/iv_advert"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_centerInParent="true"
        android:src="@mipmap/home_icon_jiankangyiliao"
        android:scaleType="fitXY"/>

    <VideoView
        android:layout_centerInParent="true"
        android:id="@+id/iv_video"
        android:layout_width="500px"
        android:layout_height="500px"
        />
    <ImageView
        android:id="@+id/iv_dissmiss"
        android:layout_width="40px"
        android:layout_height="40px"
        android:src="@mipmap/ic_video_close"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>