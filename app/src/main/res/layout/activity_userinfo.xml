<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:id="@+id/lly_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150px"
            android:layout_height="match_parent"
            android:background="#DEDEDE"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_userinfo"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/rl_user_itembg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_userinfo"
                        android:layout_width="27px"
                        android:layout_height="30px"
                        android:src="@drawable/iv_user_item_src_userinfo" />

                    <TextView
                        android:id="@+id/tv_userinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="基本资料"
                        android:textColor="@color/tv_user_item_tvbg"
                        android:textSize="20px" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_prize"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/rl_user_itembg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_prize"
                        android:layout_width="27px"
                        android:layout_height="30px"
                        android:src="@drawable/iv_user_item_src_prize" />

                    <TextView
                        android:id="@+id/tv_prize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="我的奖品"
                        android:textColor="@color/tv_user_item_tvbg"
                        android:textSize="20px" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_signin"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/rl_user_itembg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_signin"
                        android:layout_width="27px"
                        android:layout_height="30px"
                        android:src="@drawable/iv_user_item_src_signin" />

                    <TextView
                        android:id="@+id/tv_signin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="签到中心"
                        android:textColor="@color/tv_user_item_tvbg"
                        android:textSize="20px" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_luckdraw"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/rl_user_itembg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_luckdraw"
                        android:layout_width="27px"
                        android:layout_height="30px"
                        android:src="@drawable/iv_user_item_src_luckdraw" />

                    <TextView
                        android:id="@+id/tv_luckdraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="活动抽奖"
                        android:textColor="@color/tv_user_item_tvbg"
                        android:textSize="20px" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

    </LinearLayout>

</LinearLayout>