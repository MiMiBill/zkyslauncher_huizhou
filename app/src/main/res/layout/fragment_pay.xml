<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    >

    <include layout="@layout/title_bar"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/px140"
        android:layout_marginRight="@dimen/px140"
        android:layout_marginBottom="@dimen/px40"
        android:layout_marginTop="@dimen/px40"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lly_no_pay"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_price"
                android:text=""
                android:textSize="@dimen/px60"
                android:layout_marginTop="@dimen/px120"
                android:textColor="@color/color_FF633A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_hospital"
                android:text=""
                android:textSize="@dimen/px22"
                android:layout_marginTop="@dimen/px20"
                android:textColor="@color/color_585858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/px20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/wechat_green"
                    android:layout_width="@dimen/px58"
                    android:layout_height="@dimen/px47" />
                <TextView
                    android:text="微信扫描支付"
                    android:layout_marginLeft="@dimen/px16"
                    android:textColor="#09BB07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_code"
                android:layout_marginTop="@dimen/px25"
                android:layout_width="@dimen/px212"
                android:layout_height="@dimen/px212" />

            <TextView
                android:id="@+id/tv_time"
                android:textColor="@color/color_585858"
                android:textSize="@dimen/px22"
                android:layout_marginTop="@dimen/px15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lly_status"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="@dimen/px320"
                android:layout_height="@dimen/px212" />
            <TextView
                android:id="@+id/tv_status"
                android:textColor="@color/color_585858"
                android:layout_marginTop="@dimen/px40"
                android:textSize="@dimen/px50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>