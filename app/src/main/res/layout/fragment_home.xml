                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/px18"
                                    android:layout_height="@dimen/px16"
                                    android:layout_marginLeft="@dimen/px22"
                                    android:src="@mipmap/hos_time" />

                                <TextView
                                    style="@style/txt_333_18"
                                    android:text="入院时间" />

                                <TextView
                                    android:id="@+id/tv_hos_time"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/px70"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/color_585858" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/px1"
                                android:background="@color/white_gray" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/px18"
                                    android:layout_height="@dimen/px16"
                                    android:layout_marginLeft="@dimen/px22"
                                    android:src="@mipmap/hos_doctor" />

                                <TextView
                                    style="@style/txt_333_18"
                                    android:text="主治医师" />

                                <TextView
                                    android:id="@+id/tv_hos_doctor"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/px70"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/color_585858" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/px1"
                                android:background="@color/white_gray" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/px18"
                                    android:layout_height="@dimen/px16"
                                    android:layout_marginLeft="@dimen/px22"
                                    android:src="@mipmap/hos_info" />

                                <TextView
                                    style="@style/txt_333_18"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="缴费信息" />

                                <ImageView
                                    android:layout_width="@dimen/px10"
                                    android:layout_height="@dimen/px18"
                                    android:layout_marginRight="@dimen/px26"
                                    android:src="@mipmap/hos_right_arrow" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/px1"
                                android:background="@color/white_gray" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/px18"
                                    android:layout_height="@dimen/px16"
                                    android:layout_marginLeft="@dimen/px22"
                                    android:src="@mipmap/hos_card" />

                                <TextView
                                    style="@style/txt_333_18"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="病历查询" />

                                <ImageView
                                    android:layout_width="@dimen/px10"
                                    android:layout_height="@dimen/px18"
                                    android:layout_marginRight="@dimen/px26"
                                    android:src="@mipmap/hos_right_arrow" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
