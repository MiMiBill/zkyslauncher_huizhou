<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_order"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px120"
    android:background="@color/white"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/px100"
        android:layout_height="@dimen/px80"
        android:layout_marginLeft="@dimen/px30" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text=""
        android:paddingLeft="@dimen/px50"
        android:gravity="center_vertical"
        android:textColor="@color/black1"
        android:textSize="@dimen/px30" />
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=""
        android:paddingLeft="@dimen/px20"
        android:gravity="center_vertical"
        android:textColor="@color/black1"
        android:textSize="@dimen/px30" />
    <TextView
        android:id="@+id/tv_price"
        android:layout_marginLeft="@dimen/px60"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_img"
        android:layout_marginRight="@dimen/px60"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_FF633A"
        android:textSize="@dimen/px30" />
</LinearLayout>