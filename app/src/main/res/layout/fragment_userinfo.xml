<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="110px"
            android:layout_marginTop="100px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="#505050"
                android:textSize="18px"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#505050"
                android:textSize="18px"
                android:layout_marginLeft="30px"/>

        </LinearLayout>
        
        <View
            android:layout_width="519px"
            android:layout_height="1px"
            android:background="#B5B5B5"
            android:layout_marginTop="30px"
            android:layout_marginLeft="96px"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="110px"
            android:layout_marginTop="30px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="#505050"
                android:textSize="18px"/>

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#505050"
                android:textSize="18px"
                android:layout_marginLeft="30px"/>

        </LinearLayout>

        <View
            android:layout_width="519px"
            android:layout_height="1px"
            android:background="#B5B5B5"
            android:layout_marginTop="30px"
            android:layout_marginLeft="96px"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="110px"
            android:layout_marginTop="30px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:textColor="#505050"
                android:textSize="18px"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#505050"
                android:textSize="18px"
                android:layout_marginLeft="30px"/>

        </LinearLayout>

        <View
            android:layout_width="519px"
            android:layout_height="1px"
            android:background="#B5B5B5"
            android:layout_marginTop="30px"
            android:layout_marginLeft="96px"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="110px"
            android:layout_marginTop="30px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:textColor="#505050"
                android:textSize="18px"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#505050"
                android:textSize="18px"
                android:layout_marginLeft="30px"/>

        </LinearLayout>

        <View
            android:layout_width="519px"
            android:layout_height="1px"
            android:background="#B5B5B5"
            android:layout_marginTop="30px"
            android:layout_marginLeft="96px"></View>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_marginTop="51px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="96px"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="610px">
        <ImageView
            android:id="@+id/iv_signin"
            android:layout_width="365px"
            android:layout_height="79px"
            android:src="@mipmap/ic_userinfo_signin"/>

        <ImageView
            android:id="@+id/iv_luckdraw"
            android:layout_width="365px"
            android:layout_height="79px"
            android:src="@mipmap/ic_userinfo_luckdraw"
            android:layout_marginLeft="50px"/>
    </LinearLayout>

</RelativeLayout>