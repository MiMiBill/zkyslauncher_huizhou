                android:paddingLeft="@dimen/px20"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#DDDDDD"></View>

            <TextView
                android:layout_width="@dimen/px115"
                android:layout_height="match_parent"
                android:textSize="@dimen/px18"
                android:gravity="center"
                android:text="结果"
                android:textColor="@color/black_gray"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#DDDDDD"></View>

            <TextView
                android:layout_width="@dimen/px143"
                android:layout_height="match_parent"
                android:textSize="@dimen/px18"
                android:gravity="center"
                android:text="参考值"
                android:textColor="@color/black_gray"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#DDDDDD"></View>

            <TextView
                android:layout_width="@dimen/px121"
                android:layout_height="match_parent"
                android:textSize="@dimen/px18"
                android:gravity="center"
                android:text="单位"
                android:textColor="@color/black_gray"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/blue_gray"></View>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/blue_gray"
                android:layout_marginLeft="@dimen/px10"></View>

            <TextView
                android:layout_width="@dimen/px200"
                android:layout_height="match_parent"
                android:text="项目名称"
                android:textSize="@dimen/px18"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px20"/>

            <TextView
                android:layout_width="@dimen/px115"
                android:layout_height="match_parent"
                android:textSize="@dimen/px18"
                android:gravity="center"
                android:text="结果"
                android:textColor="@color/black_gray"/>

            <TextView
                android:layout_width="@dimen/px143"
                android:layout_height="match_parent"
                android:textSize="@dimen/px18"
                android:gravity="center"
                android:text="参考值"
                android:textColor="@color/black_gray"/>

            <TextView
                android:layout_width="@dimen/px121"
                android:layout_height="match_parent"
                android:textSize="@dimen/px18"
                android:gravity="center"
                android:text="单位"
                android:textColor="@color/black_gray"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_chemotherapy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginRight="@dimen/px20"
            android:layout_marginBottom="@dimen/px20">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>