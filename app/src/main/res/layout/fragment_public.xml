<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar" />

        <LinearLayout
            android:layout_margin="@dimen/px20"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_code"
                android:background="@mipmap/code_bg"
                android:layout_marginLeft="105px"
                android:layout_marginRight="97px"
                android:layout_width="@dimen/px378"
                android:layout_height="@dimen/px378"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="操作步骤:"
                    android:textColor="@color/color_38B4E9"
                    android:textSize="@dimen/px30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:background="@color/white_gray2"
                    android:layout_marginTop="@dimen/px20"
                    android:layout_marginBottom="@dimen/px20"
                    android:padding="@dimen/px40"
                    android:layout_width="488px"
                    android:orientation="vertical"
                    android:layout_height="318px">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="45px">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="10px"
                            android:text="01"
                            android:textStyle="bold"
                            android:textColor="@color/color_FF633A"
                            android:textSize="35px" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="10px"
                            android:textColor="@color/color_585858"
                            android:layout_marginLeft="@dimen/px18"
                            android:text="请扫左侧二维码"
                            android:textSize="25px" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/px16"
                        android:layout_width="match_parent"
                        android:layout_height="45px">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="10px"
                            android:text="02"
                            android:textStyle="bold"
                            android:textColor="@color/color_FF633A"
                            android:textSize="35px" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="10px"
                            android:textColor="@color/color_585858"
                            android:layout_marginLeft="@dimen/px18"
                            android:text="关注后回复验证码"
                            android:textSize="25px" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/px16"
                        android:layout_width="match_parent"
                        android:layout_height="45px">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="10px"
                            android:text="03"
                            android:textStyle="bold"
                            android:textColor="@color/color_FF633A"
                            android:textSize="35px" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="10px"
                            android:textColor="@color/color_585858"
                            android:layout_marginLeft="@dimen/px18"
                            android:text="输入验证码"
                            android:textSize="25px" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/px16"
                        android:layout_width="match_parent"
                        android:layout_height="45px">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="10px"
                            android:text="04"
                            android:textStyle="bold"
                            android:textColor="@color/color_FF633A"
                            android:textSize="35px" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="10px"
                            android:textColor="@color/color_585858"
                            android:layout_marginLeft="@dimen/px18"
                            android:text="收到验证码,请输入"
                            android:textSize="25px" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_code"
                    android:layout_marginTop="@dimen/px20"
                    android:layout_width="360px"
                    android:layout_height="80px"
                    android:background="@drawable/btn_shape_code"
                    android:text="点此输入验证码"
                    android:textColor="@color/white"
                    android:textSize="25px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>