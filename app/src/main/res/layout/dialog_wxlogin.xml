<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="632px"
    android:layout_height="664px"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llPayCode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30px">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="84px">


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2994f1"
                android:textSize="34px"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="登录" />


            <ImageView
                android:id="@+id/iv_dissmiss"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:src="@mipmap/icon_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


            <View
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dedede" />

        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_login_code"
            android:layout_width="418px"
            android:layout_height="418px"
            android:layout_gravity="center"
            android:layout_marginTop="40px" />


        <TextView
            android:layout_marginTop="15px"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="请使用微信扫码登录"
            android:textColor="#333333"
            android:textSize="28px" />

    </LinearLayout>

</RelativeLayout>