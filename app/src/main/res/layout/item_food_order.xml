<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px120"
    android:background="@color/white"
    android:layout_marginTop="@dimen/px1"
    >

    <ImageView
        android:id="@+id/iv_img"
        android:layout_marginLeft="@dimen/px40"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/px190"
        android:layout_height="@dimen/px112"
        android:src="@mipmap/ic_video_load_default"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginTop="@dimen/px20"
        android:layout_marginBottom="@dimen/px20"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="土豆炒腊肉"
            android:textSize="@dimen/px22"
            android:textColor="@color/black1"
            />
        <TextView
            android:id="@+id/tv_reamrk"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:singleLine="true"
            android:textSize="@dimen/px22"
            android:textColor="@color/black1"
            />
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/px22"
            android:textColor="@color/black1"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_price"
        android:layout_below="@id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="15"
        android:layout_marginRight="@dimen/px60"
        android:gravity="center"
        android:textSize="@dimen/px22"
        android:textColor="@color/color_FF633A"
        />
</LinearLayout>