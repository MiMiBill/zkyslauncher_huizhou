                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="门诊：2356423"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/px18"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="科别：外科"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/px18"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="床号：05"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/px18"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="报告时间：2019-07-19 20:20"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/px18"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px40"
            android:layout_marginRight="@dimen/px40"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/px5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="病区："
                android:textColor="@color/black_gray"
                android:textSize="@dimen/px18"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="采样时间：2019-07-19 15:00"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/px18"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="标本总类：全血"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/px18"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="操作：李雪      审核：李雪"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/px18"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/blue_gray"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginRight="@dimen/px20"
            android:layout_marginTop="@dimen/px25"></View>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px45"
            android:background="@color/white_gray4"
            android:orientation="horizontal"
            android:layout_marginLeft="20px"
            android:layout_marginRight="@dimen/px20">

            <TextView
                android:layout_width="@dimen/px200"
                android:layout_height="match_parent"
                android:text="项目名称"
                android:textSize="@dimen/px18"
