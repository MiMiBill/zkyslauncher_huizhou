<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px256"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/px20"
    android:layout_marginLeft="@dimen/px140"
    android:layout_marginRight="@dimen/px140"
    android:background="#E3E3E3">

    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="@dimen/px40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px84">
        <TextView
            android:text="联系人:"
            android:textSize="@dimen/px22"
            android:gravity="center_vertical"
            android:textColor="@color/color_585858"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/edt_name"
            android:hint="请填写收货的姓名"
            android:background="@null"
            android:layout_marginLeft="@dimen/px40"
            android:textSize="@dimen/px22"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/px1"
        android:background="@color/white"
        android:paddingLeft="@dimen/px40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px84">
        <TextView
            android:text="手机号:"
            android:textSize="@dimen/px22"
            android:gravity="center_vertical"
            android:textColor="@color/color_585858"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/edt_phone"
            android:hint="请填写手机号码"
            android:background="@null"
            android:inputType="number"
            android:layout_marginLeft="@dimen/px40"
            android:textSize="@dimen/px22"
            android:maxLength="11"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/px1"
        android:background="@color/white"
        android:paddingRight="@dimen/px40"
        android:gravity="center_vertical|right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px84">

        <Button
            android:id="@+id/btn_commit"
            android:text="保存"
            android:textColor="@color/white"
            android:background="@color/blue_gray"
            android:inputType="number"
            android:layout_marginLeft="@dimen/px40"
            android:textSize="@dimen/px25"
            android:layout_width="@dimen/px150"
            android:layout_height="@dimen/px50" />
    </LinearLayout>
</LinearLayout>