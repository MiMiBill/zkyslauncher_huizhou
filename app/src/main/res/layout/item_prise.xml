<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/px10"
    android:paddingLeft="@dimen/px10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/px290"
        android:layout_height="@dimen/px151"
        android:src="@mipmap/ic_video_load_default"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_below="@id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="@dimen/px22"
        android:textColor="@color/black1"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_count"
        android:layout_below="@id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@id/tv_name"
        android:layout_marginLeft="@dimen/px15"
        android:textSize="@dimen/px22"
        android:textColor="@color/black1"
        android:layout_gravity="center_horizontal"/>
</RelativeLayout>